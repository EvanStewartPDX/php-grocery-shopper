<!DOCTYPE html>
<html>
    <head>
        <title>Products</title>
    </head>
    <body>
        <h1>Enter / Modify Products Information</h1>
        <div class="container">
            {% if products is not empty %}
                <h2>Here is a list of the current products:</h2>
                <h4>Click the name of the product to update.</h4>
                <div class="row">
                    <div class="col-sm-3">
                        <h3>Name</h3>
                    </div>
                    <div class="col-sm-2">
                        <h3>Price</h3>
                    </div>
                    <div class="col-sm-2">
                        <h3>Inventory</h3>
                    </div>
                    <div class="col-sm-4">
                        <h3>Photo</h3>
                    </div>
                </div>
                {% for product in products %}
                    <div class="row">
                        <div class="col-sm-3">
                            <a href="/product_details/{{ product.getId }}">{{ product.getName }}</a>
                        </div>
                        <div class="col-sm-2">
                            {{ product.getPrice }}
                        </div>
                        <div class="col-sm-2">
                            {{ product.getInventory }}
                        </div>
                        <div class="col-sm-4">
                            {% if product.getPhoto is empty %}
                                <img src="/uploads/images.jpeg">
                            {% else %}
                                <img src="/uploads/{{ product.getPhoto }}">
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            {% endif %}

            <form action="/products_add" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name" name="name" class="form-control" type="text" required>
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <input id="price" name="price" class="form-control" type="float" min=0 required>
                </div>
                <div class="form-group">
                    <label for="inventory">Inventory:</label>
                    <input id="inventory" name="inventory" class="form-control" type="number" required>
                </div>
                <div class="form-group">
                    <label for="photo">Photo:</label>
                    <input id="photo" name="photo" class="form-control" type="text">
                </div>
                <button class="btn btn-info">Add Product</button>
            </form>

            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
