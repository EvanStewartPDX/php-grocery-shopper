<!DOCTYPE html>
<html>

    <body>
        <div class="container">
            <br>
            <div class="jumbotron text-center">
                <h1>Shoppr</h1>
            </div>

            <!-- <a href="/products">Enter / Modify Products</a> -->

            <div class="row">
                <div class="col-sm-2 well">
                    <h4>Click to choose a category:</h4>
                    {% if categories is not empty %}
                    <ul>
                        {% for category in categories %}
                            <li><a href="/category/{{ category.getId }}">{{ category.getName }}</a></li>
                        {% endfor %}
                        <li><a href="/">All</a></li>
                    </ul>
                    {% endif %}
                </div>

                <div class="col-sm-8">
                    {% if products is not empty %}
                        <div class="row">
                            {% if category is empty %}
                                {% for product in products %}
                                    <div class="col-sm-3 panel well">
                                        <div class="panel-body">
                                            <img src="/uploads/{{ product.getPhoto }}" alt="Card image cap">
                                            <h4>{{ product.getName }}</h4>
                                            <p>Price per - ${{ product.getPrice }}</p>
                                            <form class="" action="/order/{{ product.getId }}" method="post">
                                                <div class='form-group'>
                                                    <label>Purchase quantity:</label>
                                                    <input type="number" name="product_id" max='{{product.getInventory}}' class='form-control'>
                                                </div>
                                                <a href="/product" class="btn btn-primary">Add to cart!</a>
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}

                            {% else %}
                                {% for product in categoryProducts %}
                                    <div class="col-sm-3 panel">
                                        <div class="panel-body">
                                            <img src="/uploads/{{ product.getPhoto }}" alt="Card image cap">
                                            <h4>{{ product.getName }}</h4>
                                            <p>Price per - ${{ product.getPrice }}</p>
                                            <form class="" action="/order/{{ product.getId }}" method="post">
                                                <div class='form-group'>
                                                    <label>Purchase quantity:</label>
                                                    <input type="number" name="product_id" max='{{product.getInventory}}' class='form-control'>
                                                </div>
                                                <a href="/product" class="btn btn-primary">Add to cart!</a>
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>

                    {% else %}
                        <h5>Sorry ... no known inventory! D-:</h5>
                    {% endif %}
                </div>

                <div class="col-sm-2 well">
                    {% if categories is not empty %}
                    <ul>
                        <li>Cart stuff by Evan and Chris</li>
                    </ul>
                    {% endif %}
                </div>

            </div>

        </div>
    </body>
</html>
